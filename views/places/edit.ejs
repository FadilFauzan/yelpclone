<% layout('layouts/app') %>

<h1>Edit Place</h1>
<form action="/places/<%= place._id %>?_method=PUT" method="post">
    <section>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= place.title %>">
    </section>
    <section>
        <label for="price">Price</label>
        <input type="text" name="price" id="price" value="<%= place.price %>">
    </section>
    <section>
        <label for="description">Deskripsi</label>
        <input type="text" name="description" id="description" value="<%= place.description %>">
    </section>
    <section>
        <label for="location">Lokasi</label>
        <input type="text" name="location" id="location" value="<%= place.location %>">
    </section>
    <button type="submit">Submit</button>
</form>