<% layout('layouts/app') %>

<h1><%= place.title %></h1>
<h3><%= place.location %></h3>
<img src="https://source.unsplash.com/1000x500/?/<%= place.title %>" alt="">
<p><%= place.description %></p>
<p>Harga Masuk: <%= place.price %></p>

<a href="/places/<%= place._id %>/edit">Edit</a>
<a href="/places">All places</a>
<form action="/places/<%= place._id %>?_method=DELETE" method="post">
    <button type="submit">Delete</button>
</form>
