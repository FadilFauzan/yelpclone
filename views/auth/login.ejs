<% layout('layouts/app') %>

<div class="d-flex justify-content-center">
    <form action="/login" method="post" class="w-25">
        <h1 class="mb-5 text-center">Login</h1>

        <!-- username input -->
        <div class="form-floating mb-2">
            <input type="text" name="username" id="username" class="form-control" placeholder="username" autofocus required/>
            <label for="username">Username</label>
        </div>

        <!-- Password input -->
        <div class="form-floating mb-3">
            <input type="password" name="password" id="password" class="form-control" 
                placeholder="password" autofocus required/>
            <label for="password">Password</label>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col">
                <!-- Simple link -->
                <a href="#" data-bs-toggle="modal" data-bs-target="#formModal">
                    Forgot password?
                </a>
            </div>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not Registered? <a href="/register">Register</a></p>
        </div>

        <!-- Submit button -->
        <div class="d-flex justify-content-end">
            <button type="submit" name="login" class="btn btn-secondary mb-3 col">Login</button>
        </div>
    </form>
</div>